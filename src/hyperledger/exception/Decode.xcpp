#divert <fpp>
namespace hyperledger::exception {
  //
  // Declare that there was "some problem" with a decode operation.
  //
  // Usage:
  //
  //   throw Decode{"base64"};
  //
  class Decode;
}
#endiv
#divert <hpp>
#import hyperledger.exception.Aspect
#import std.runtime_error
class hyperledger::exception::Decode : public Aspect, public std::runtime_error {
  struct Ancestors {
    using Aspect = hyperledger::exception::Aspect;
    using Exception = std::runtime_error;
  };
public:
  inline explicit Decode(std::string const &);
  auto what() const noexcept -> char const * override;
};
#endiv
#divert <ipp>
namespace hyperledger::exception {
  Decode::Decode(std::string const &reason)
    : Ancestors::Exception{reason}
  { }
}
#endiv
#divert <cpp>
auto hyperledger::exception::Decode::what() const noexcept -> char const * {
  return Ancestors::Exception::what();
}
#endiv
