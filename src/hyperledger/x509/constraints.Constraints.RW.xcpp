    using Ancestor = Prototype<openssl::Stack, openssl::x509::Extension> ;
    friend class pki::Certificate;
    friend class pki::Request;
    inline explicit Constraints(Held);
  public:
    Constraints() = default;
    // What "accessors" are supposed to happen here?
    // What "setters" are supposed to happen here?
  };
}
#endiv
