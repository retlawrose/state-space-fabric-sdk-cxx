#divert <cpp>
#import c.argv
#import c.rest
#import hyperledger.base64.encode
#import std.string
#import std.getline
#import std.cin
#import std.cout
auto main(int cc, char *vv[]) -> int {
  using hyperledger::base64::encode;
  auto av = c::argv(cc, vv);
  if (1 == av.size()) {
    for (std::string word; getline(std::cin, word); ) {
      auto encoded = encode(word);
      std::cout << encoded << '\n';
    }
  } else {
    for (std::string word : c::rest(av)) {
      auto encoded = encode(word);
      std::cout << encoded << '\n';
    }
  }
  return 0;
}
#endiv
